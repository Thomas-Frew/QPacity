<Page x:Class="QPacity.InterfaceHelp"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:QPacity"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="700">

    <!-- Help Scroll Bar -->
    <ScrollViewer Background="{StaticResource CoreLightBrush}" UseLayoutRounding="True" VerticalScrollBarVisibility="Auto">
        
        <!-- Help Content -->
        <StackPanel Margin="5">
            <TextBlock Style="{StaticResource BlockBody}">
                Now that your event is set up, you should see a circle on the main page, indicating the room's current capacity, out of its maximum capacity.
            </TextBlock>

            <Image Style="{StaticResource BlockImage}" Height="300" Source="/QPacity;component/Resources/Help/Labelled Meter.png"/>

            <TextBlock Style="{StaticResource BlockBody}">
                The blue bar at the bottom of the application indicates that QPacity is ready to begin signing guests in and out.
            </TextBlock>

            <Image Style="{StaticResource BlockImage}" Height="70" Source="/QPacity;component/Resources/Help/Blue Bar.png"/>
        </StackPanel>
    </ScrollViewer>
</Page>
