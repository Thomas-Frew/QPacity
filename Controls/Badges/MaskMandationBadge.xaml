<UserControl x:Class="QPacity.MaskMandationBadge"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QPacity"
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="60">
    <Grid Background="{StaticResource CoreBlueBrush}" Margin="5">
        <TextBlock Style="{StaticResource CoreIconLight}" Text="&#xe063;"/>

        <Grid.ToolTip>
            <StackPanel Orientation="Vertical" MaxWidth="400">
                <TextBlock Style="{StaticResource CoreTooltipHeader}" Text="Mask Required" TextWrapping="Wrap"/>
                <TextBlock Style="{StaticResource CoreTooltipBody}" Text="For the safety of everyone attending this event, you are required to wear a mask." TextWrapping="Wrap"/>
            </StackPanel>
        </Grid.ToolTip>
    </Grid>
</UserControl>
